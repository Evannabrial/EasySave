<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EasySave.ViewModels"
             xmlns:dto="clr-namespace:EasySave.DTO"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:JobsViewModel"
             Background="{DynamicResource SecondaryColor}"
             x:Class="EasySave.Views.JobControl">

    <Panel>

        <Grid RowDefinitions="50, *" Margin="24 12">

            <Grid ColumnDefinitions="Auto, *, Auto, Auto" Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Grid.Column="0" FontSize="32" Foreground="{DynamicResource TextColor}">Job Management</TextBlock>

                <Button Grid.Column="2" Content="{Binding DictText[RunJobsMessage]}" Margin="0,0,24,0"
                        Background="DarkGreen"
                        Foreground="White"
                        IsVisible="{Binding ShowMultiSelectButton}"
                        Command="{Binding RunMultipleSaveCommand}" />

                <Button Grid.Column="3"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="{DynamicResource ButtonTextBrush}"
                        Command="{Binding OpenAddJobCommand}"
                        Content="{Binding DictText[AddJobMessage]}" />
            </Grid>

            <Panel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border IsVisible="{Binding Jobs.Count}"
                        Background="{DynamicResource PrimaryColor}"
                        CornerRadius="8"
                        Padding="10">
                    <Grid RowDefinitions="Auto, *">

                        <Border Grid.Row="0" Padding="15,10" Background="{DynamicResource SecondaryColor}"
                                CornerRadius="12 12 0 0" BorderBrush="{DynamicResource PrimaryColor}">
                            <Grid ColumnDefinitions="40, 100, 100, 150, 150, 150, 160, 130" ColumnSpacing="3">
                                <TextBlock Grid.Column="1" Text="{Binding DictText[JobNameMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="{Binding DictText[TypeMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="3" Text="{Binding DictText[SourceMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="4" Text="{Binding DictText[DestinationMessage]}"
                                           FontWeight="Bold" Foreground="{DynamicResource TextColor}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="5" Text="{Binding DictText[StatusMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="6" Text="{Binding DictText[ProgressMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="7" Text="{Binding DictText[ActionsMessage]}" FontWeight="Bold"
                                           Foreground="{DynamicResource TextColor}" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>

                        <ListBox ItemsSource="{Binding Jobs}" Grid.Row="1"
                                 Background="{DynamicResource SecondaryColor}"
                                 CornerRadius="0 0 12 12" Padding="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="dto:JobDto">
                                    <Grid ColumnDefinitions="40, 100, 100, 150, 150, 150, 160, 130"
                                          Background="Transparent" ColumnSpacing="3">

                                        <CheckBox Grid.Column="0" VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Margin="0" IsChecked="{Binding IsSelected}">
                                            <CheckBox.Resources>
                                            </CheckBox.Resources>
                                        </CheckBox>

                                        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextColor}" />
                                        <TextBlock Grid.Column="2" Text="{Binding Save}" VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextColor}" />
                                        <TextBlock Grid.Column="3" Text="{Binding Source}" VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextColor}"
                                                   ToolTip.Tip="{Binding Source}" />
                                        <TextBlock Grid.Column="4" Text="{Binding Target}" VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextColor}"
                                                   ToolTip.Tip="{Binding Target}" />

                                        <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="6"
                                                    VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="{Binding ColorStatus}" />
                                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" FontSize="12"
                                                       Foreground="{DynamicResource TextColor}" />
                                        </StackPanel>

                                        <Grid Grid.Column="6" ColumnDefinitions="*, Auto" ColumnSpacing="8"
                                              VerticalAlignment="Center">
                                            <ProgressBar Value="{Binding Progress}" Height="10" CornerRadius="5"
                                                         Background="#33FFFFFF" />
                                            <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}"
                                                       FontSize="11" Foreground="{DynamicResource TextColor}" />
                                        </Grid>

                                        <StackPanel Grid.Column="7" Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Button Background="Transparent" Padding="4"
                                                    CommandParameter="{Binding}"
                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).RunStartSingleSave}"
                                                    IsVisible="{Binding IsPlayDisplay}">
                                                <Svg Path="avares://EasySave/Assets/play-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: green; }</Svg.Css>
                                                </Svg>
                                            </Button>

                                            <Button Background="Transparent" Padding="4"
                                                    CommandParameter="{Binding}"
                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).ResumeJobCommand}"
                                                    IsVisible="{Binding IsPaused}">
                                                <Svg Path="avares://EasySave/Assets/play-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: orange; }</Svg.Css>
                                                </Svg>
                                            </Button>

                                            <Button IsVisible="{Binding IsRunning}" VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Background="Transparent" Padding="4"
                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).PauseJobCommand}"
                                                    CommandParameter="{Binding}">
                                                <Svg Path="avares://EasySave/Assets/pause-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: #007ACC; }</Svg.Css>
                                                </Svg>
                                            </Button>
                                            
                                            <Button IsVisible="{Binding IsActive}" VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Background="Transparent" Padding="4"
                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).CancelJobCommand}"
                                                    CommandParameter="{Binding}">
                                                <Svg Path="avares://EasySave/Assets/square-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: #FF1317; }</Svg.Css>
                                                </Svg>
                                            </Button>

                                            <Button Background="Transparent" Padding="4"
                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).OpenEditJobCommand}"
                                                    CommandParameter="{Binding}">
                                                <Svg Path="avares://EasySave/Assets/pen-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: #B849FF; }</Svg.Css>
                                                </Svg>
                                            </Button>

                                            <Button Background="Transparent" Padding="4">
                                                <Svg Path="avares://EasySave/Assets/trash-solid-full.svg" Width="24" Height="24">
                                                    <Svg.Css>path { fill: red; }</Svg.Css>
                                                </Svg>
                                                <Button.Flyout>
                                                    <Flyout Placement="Top">
                                                        <StackPanel Spacing="10" MinWidth="150">
                                                            <TextBlock
                                                                Text="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).DictText[DeleteJobMessage]}"
                                                                FontWeight="Bold" HorizontalAlignment="Center" />
                                                            <StackPanel Orientation="Horizontal" Spacing="10"
                                                                        HorizontalAlignment="Center">
                                                                <Button
                                                                    Content="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).DictText[YesMessage]}"
                                                                    Background="Red" Foreground="White"
                                                                    Command="{Binding $parent[UserControl].((vm:JobsViewModel)DataContext).RunDeleteJob}"
                                                                    CommandParameter="{Binding}" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <Border IsVisible="{Binding !Jobs.Count}"
                        Background="{DynamicResource PrimaryColor}"
                        CornerRadius="8"
                        Padding="48">
                    <TextBlock Text="{Binding DictText[NoJobMessage]}" Foreground="{DynamicResource TextColor}" />
                </Border>
            </Panel>
        </Grid>

        <Grid IsVisible="{Binding IsFormVisible}" Background="#AA000000">
            <Border Background="{DynamicResource SecondaryColor}"
                    BorderBrush="{DynamicResource PrimaryColor}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel Spacing="15">
                    <TextBlock Text="{Binding FormTitle}" FontSize="24" FontWeight="Bold" Foreground="White"
                               HorizontalAlignment="Center" />

                    <StackPanel>
                        <TextBlock Text="{Binding DictText[JobNameMessage]}" Foreground="White" Margin="0,0,0,5" />
                        <TextBox Text="{Binding FormName}" Watermark="Job Name" HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="{Binding DictText[SourcePathMessage]}" Foreground="White" Margin="0,0,0,5" />
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding FormSource}"
                                     Watermark="C:\Source\Path"
                                     HorizontalAlignment="Stretch"
                                     Margin="0,0,5,0" />
                            <Button Grid.Column="1"
                                    Command="{Binding OpenFilePickerSourceCommand}"
                                    Content="..." />
                        </Grid>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="{Binding DictText[TargetPathMessage]}" Foreground="White" Margin="0,0,0,5" />
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding FormTarget}"
                                     Watermark="D:\Target\Path"
                                     HorizontalAlignment="Stretch"
                                     Margin="0,0,5,0" />

                            <Button Grid.Column="1"
                                    Command="{Binding OpenFilePickerTargetCommand}"
                                    Content="..." />
                        </Grid>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="{Binding DictText[SaveTypeMessage]}" Foreground="White" Margin="0,0,0,5" />
                        <ComboBox ItemsSource="{Binding SaveTypes}"
                                  SelectedItem="{Binding SelectedSaveType}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0,10,0,0">
                        <Button Grid.Column="0" Content="{Binding DictText[CancelMessage]}"
                                Command="{Binding CloseFormCommand}"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                Background="Gray" Foreground="White" />

                        <Button Grid.Column="1" Content="{Binding DictText[SaveMessage]}"
                                Command="{Binding SaveFormCommand}"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                Background="{DynamicResource PrimaryColor}" Foreground="{DynamicResource ButtonTextBrush}" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

    </Panel>

    <!--
    <UserControl.Styles>
        <Style Selector="Svg.spinner">
            <Style.Animations>
                <Animation Duration="0:0:2" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="RotateTransform.Angle" Value="0" />
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:2">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>
    -->
</UserControl>
